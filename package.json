{
  "name": "chu-tools-server",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "serve": "npm run build && firebase serve --only functions --project com-gairal-chu-tools",
    "shell": "npm run build && firebase functions:shell --project com-gairal-chu-tools",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions --project com-gairal-chu-tools",
    "dev": "node --inspect -r ts-node/register ./src/fastify.ts",
    "debug": "./node_modules/.bin/nodemon",
    "logs": "firebase functions:log",
    "format": "./node_modules/.bin/prettier --write"
  },
  "main": "lib/index.js",
  "dependencies": {
    "axios": "^0.18",
    "cors": "^2.8",
    "dotenv": "^6.2",
    "firebase-admin": "^7.0",
    "firebase-functions": "^2.2",
    "googleapis": "^37.2",
    "query-string": "^6.2",
    "twit": "^2.2"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1",
    "@types/query-string": "^6.2",
    "@types/twit": "^2.2",
    "fastify": "^1.14",
    "nodemon": "^1.18",
    "prettier": "^1.16",
    "ts-node": "^8.0",
    "tslint": "^5.12",
    "tslint-config-airbnb": "^5.11",
    "tslint-config-prettier": "^1.18",
    "typescript": "^3.3"
  },
  "private": true,
  "engines": {
    "node": "8"
  }
}
